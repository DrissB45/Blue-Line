{% extends 'layoutAdmin.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block title %}Admin - Éditer quiz
{% endblock %}

{% block content %}
	<div class="container text-start">
		<div class="col justify-content-center">
			<h1 class="d-flex justify-content-center mb-4">Tutoriel :
				{{ lesson.tutorial.title }}</h1>
			<h1 class="d-flex justify-content-center fs-2 mb-4 text-primary">Leçon :
				{{ lesson.title }}</h1>
			<div class="row">
				<div class="g-2 ms-5">

					{{ component('_form_collection_question', {
						form: form,
						quizQuestion: question
					}) }}

				</div>
				<a href="{{ path('app_admin_tutorial_lesson_quiz_show', {'tutorial': tutorial.id, 'lesson': lesson.id}) }}" class="btn btn-outline-primary mt-5 ms-2" role="button" aria-disabled="true">Retour aux questions</a>
			</div>
		</div>
	</div>
{% endblock %}

{% extends 'layoutAdmin.html.twig' %}

{% block header %}
	{% include 'components/_headerAdmin.html.twig' %}
{% endblock %}


{% block title %}{% endblock %}

{% block content %}
	<div class="container text-start">
		<div class="col justify-content-start">
			<h1 class="d-flex justify-content-start">{{ lesson.title }}
				: Quiz</h1>
			<section class="d-flex justify-content-start">
				<table class="table overflow-auto">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Titre</th>
							<th scope="col">Administrer</th>
						</tr>
					</thead>
					<tbody class="table-group-divider">
						{% for question in questions %}
							<tr>
								<td scope="row">{{ question.id }}</td>
								<td>{{ question.questiontext }}</td>
								<td>
									<a class="btn btn-outline-primary mt-1 me-2" href="{{ path('app_admin_question_edit', {'id': question.id}) }}" role="button">Éditer</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">Aucune question trouvée</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</section>

			<a class="btn btn-primary mt-2" href="{{ path('app_admin_lesson_new') }}" role="button">Créer une nouvelle question</a>
		</div>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% set title = 'Profil' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block title %}Modifier
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="block-registration">
			<p class="registration-title text-center fs-1 text-secondary my-4 fw-bold">Créez votre compte !</p>
			<div class="mx-3">
				<div class="text-center">
					<h2 class="text-secondary fs-4">Pourquoi créer un compte ?</h2>
					<p class="fs-5 text-light">Change your informations</p>
				</div>
			</div>
			{{ form_start(profileForm) }}
			<div class="col">
				<div class="profile-form bg-light mx-4 mx-lg-auto mb-3 col-lg-4">
					<h3 class="text-center mt-4 mb-4 pt-3 fs-4">Remplissez les champs</h3>

					<div class="my-3 col-10 m-auto fs-5">
						{{ form_row(profileForm.lastName, { 'attr': {'class': 'profile-input'} }) }}
					</div>
					<div class="my-3 col-10 m-auto fs-5">
						{{ form_row(profileForm.firstName, { 'attr': {'class': 'profile-input'} }) }}
					</div>
					<div class="my-3 col-10 m-auto fs-5">
						{{ form_row(profileForm.profileImageName, { 'attr': {'class': 'profile-input'} }) }}
					</div>
					<div class="my-3 col-10 m-auto d-flex justify-content-center">
						<button type="submit" class="btn btn-primary col-10 my-3 fs-5 p-1">Valider</button>
					</div>
				</div>
			</div>
			{{ form_end(profileForm) }}
		</div>
	</div>
{% endblock %}
